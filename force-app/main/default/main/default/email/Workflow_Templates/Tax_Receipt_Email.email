    <div style="color: #000; font-size: 90%; margin-top: 0px;">
        <div style="width:270px;float:left;margin-left:30px"><apex:image url="{!URLFOR($Resource.Logo2020)}" style="align: left;" alt="LiveDifferent" width="180" height="50" title="LiveDifferent"/><br />
        <div  style="width:208px" class="smallfont" >Location Receipt Issued:<br />
{!$Organization.Street}<br />
{!$Organization.City} {!$Organization.State} {!$Organization.PostalCode}</div>
             </div>
             <div style="width:200px;float:left"><strong>Receipt #: {!relatedTo.Name}  {!IF(relatedTo.Version__c != null && relatedTo.Version__c > 1,'V','')}{!IF(relatedTo.Version__c != null && relatedTo.Version__c > 1,relatedTo.Version__c,'')}</strong></div>
             
</div>
</div><div style="clear:both"></div>
<div class='smallfont floatright' style='margin-top:15px'>
Donation received on <apex:outputText value="{0, date, MMMM d',' yyyy}">
      <apex:param value="{!relatedTo.Donation_Received_On__c}" />
</apex:outputText><br />
